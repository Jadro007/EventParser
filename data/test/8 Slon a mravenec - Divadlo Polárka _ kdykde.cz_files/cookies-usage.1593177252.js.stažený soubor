(function(){var cookies_usage_container=$$('.js_cookies_usage_container');if(cookies_usage_container.length){cookies_usage_container.each(function(el){if(Cookie.read('js_cookies_hdn'))el.addClass('hdn');var cookies_usage_source=el.getElement('.js_cookies_usage_source');if(typeOf(cookies_usage_source)!="null"){var cookies_usage_text=cookies_usage_source.get('data-text');if(cookies_usage_text!=''){var cookies_usage_text_el=new Element('span',{html:cookies_usage_text,'class':'cookies-usage-content-text'});cookies_usage_text_el.inject(cookies_usage_source);}
var cookies_usage_link=cookies_usage_source.get('data-link');var cookies_usage_link_text=cookies_usage_source.get('data-link-text');if(cookies_usage_link!=''){var cookies_usage_link_el=new Element('a',{href:cookies_usage_link,html:cookies_usage_link_text,'class':'cookies-usage-content-link'});cookies_usage_link_el.inject(cookies_usage_source);}
if(cookies_usage_text!=''){var cookies_usage_content_close=new Element('span',{'class':'cookies-usage-content-close',html:'<span class="icon-close"></span>',events:{click:function(){cookies_usage_container.addClass('hdn');Cookie.write('js_cookies_hdn','1',{duration:3650});}}});cookies_usage_content_close.inject(cookies_usage_source);}
else{cookies_usage_container.addClass('hdn');}}});}})();